# Local Development Environment Configuration
# Copy this file to .env for local development with Docker
# Production environment variables are managed by Render

# Local Database Configuration
DATABASE_URL="postgresql://sprintsync_user:local_dev_password@localhost:5432/sprintsync_dev"

# JWT Configuration
JWT_SECRET="local-development-jwt-secret-not-for-production"
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV="development"

# Logging
LOG_LEVEL="debug"

# AI Configuration (for future use)
OPENAI_API_KEY="your-openai-api-key"
AI_MODEL="gpt-3.5-turbo"

# Note: Production environment variables are configured in Render dashboard:
# - DATABASE_URL (automatically provided by Render PostgreSQL)
# - JWT_SECRET (auto-generated by Render)
# - PORT (automatically set by Render)
# - NODE_ENV=production
